<h2>New Entry</h2>
<%= form_with(model: @entry, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :occurred_on, "Date" %>
    <%= form.date_select :occurred_on, { start_year: 2000, end_year: Date.today.year }, { class: "form-control" } %>
  </div>
  <div class="form-group">
    <%= form.label :image %>
    <%= form.file_field :image, class: "form-control-file" %>
  </div>
  <div class="form-group">
    <%= form.label :place_id, "Place" %>
    <%= form.collection_select :place_id, Place.all, :id, :name, { prompt: "Select a place" }, { class: "form-control" } %>
  </div>
  <%= form.submit "Create Entry", class: "btn btn-primary" %>
<% end %>
