<!-- app/views/entries/new.html.erb -->
<h2>New Entry for <%= @place.name %></h2>

<%= form_with(model: [@place, @entry], local: true) do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= form.label :occurred_on %>
    <%= form.date_field :occurred_on, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= form.label :image %>
    <%= form.file_field :image, class: "form-control" %>
  </div>
  
  <%= form.hidden_field :place_id, value: @place.id %>
  
  <div class="form-group mt-3">
    <%= form.submit "Create Entry", class: "btn btn-primary" %>
  </div>
<% end %>

<div class="mt-3">
  <%= link_to "Back to Place", place_path(@place), class: "btn btn-secondary" %>
</div>