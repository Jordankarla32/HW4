<h2><%= @place.name %></h2>
<p><%= @place.description %></p>
<%= link_to "Add Entry", new_entry_path, class: "btn btn-primary mb-3" %>
<div class="row">
  <% @entries.each do |entry| %>
    <div class="col-md-4 mb-3">
      <div class="card">
        <% if entry.image.attached? %>
          <%= image_tag entry.image, class: "card-img-top", alt: entry.title %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= entry.title %></h5>
          <p class="card-text"><%= truncate(entry.description, length: 100) %></p>
          <p class="card-text"><small class="text-muted"><%= entry.occurred_on %></small></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
