<h2><%= @place.name %></h2>

<% if logged_in? %>
  <p>
    <%= link_to "Add Entry", new_place_entry_path(@place), class: "btn btn-primary mb-3" %>
  </p>
<% end %>

<div class="row">
  <% @entries.each do |entry| %>
    <div class="col-md-4 mb-4">
      <div class="card">
        <% if entry.image.attached? %>
          <%= image_tag entry.image, class: "card-img-top" %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= entry.title %></h5>
          <p class="card-text"><%= entry.description.truncate(100) %></p>
          <p class="card-text"><small class="text-muted">Date: <%= entry.occurred_on %></small></p>
        </div>
      </div>
    </div>
  <% end %>
</div>

<p>
  <%= link_to "Back to Places", places_path, class: "btn btn-secondary" %>
</p>