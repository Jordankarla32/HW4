<!-- app/views/places/new.html.erb -->
<h1>New Place</h1>

<% if @place.errors.any? %>
  <div class="alert alert-danger">
    <% @place.errors.full_messages.each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
<% end %>

<%= form_with(model: @place, local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.submit "Create Place", class: "btn btn-primary" %>
  </div>
<% end %>

<p>
  <%= link_to "Back to Places", places_path, class: "btn btn-secondary" %>
</p>