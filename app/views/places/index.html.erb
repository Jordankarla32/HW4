<!-- app/views/places/index.html.erb -->
<h1>Places</h1>

<% if logged_in? %>
  <p>
    <%= link_to "New Place", new_place_path, class: "btn btn-primary mb-3" %>
  </p>
<% end %>

<div class="row">
  <% @places.each do |place| %>
    <div class="col-md-4 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= place.name %></h5>
          <!-- Remove this line that references description -->
          <%= link_to "View Entries", place_path(place), class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>